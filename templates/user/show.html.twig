{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Nom :
				</th>
				<td>{{ user.lastName }}</td>
			</tr>
			<tr>
				<th>Prénom :
				</th>
				<td>{{ user.firstName }}</td>
			</tr>
			<tr>
				<th>Date de naissance :
				</th>
				<td>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Numéro de téléphone :
				</th>
				<td>{{ user.phoneNumber }}</td>
			</tr>
			<tr>
				<th>E-mail</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>Adresse :
				</th>
				<td>{{ user.address }}</td>
			</tr>
			<tr>
				<th>Ville :
				</th>
				<td>{{ user.city }}</td>
			</tr>
			<tr>
				<th>Code postale :
				</th>
				<td>{{ user.ZIPcode }}</td>
			</tr>
			<tr>
				<th>Pays :
				</th>
				<td>{{ user.country }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('user_index') }}">
		<button class="btn btn-secondary">
			Retour à la liste
		</button>
	</a>

	<a href="{{ path('user_edit', {'id': user.id}) }}">
		<button class="btn btn-warning">
			Éditer
		</button>
	</a>

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
